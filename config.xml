<?xml version='1.0' encoding='utf-8'?>
<widget id="com.onegini.cordovaExampleApp" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ExampleApp</name>
    <description>
        Onegini Cordova Example app
    </description>
    <author email="info@onegini.com" href="http://onegini.com">
        Onegini
    </author>

    <preference name="OneginiRootDetectionEnabled" value="false"/>
    <preference name="OneginiDebugDetectionEnabled" value="false"/>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- Required to set minSdkVersion in app if cordova-plugin-onegini is included -->
        <preference name="android-minSdkVersion" value="16" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
